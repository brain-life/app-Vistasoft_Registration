#!/bin/bash

module load singularity 2> /dev/null

# create brainmask
singularity exec -e docker://brainlife/vistasoftregistration /app/brainmask.sh

# registration
singularity exec -e docker://brainlife/mcr:neurodebian1604-r2017a ./compiled/main

# clean up
singularity exec -e docker://brainlife/vistasoftregistration /app/clean.sh


if [ ! -s output.mat ];
then
	echo "output missing"
	exit 1
fi
